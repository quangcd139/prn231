<script>
    $(document).ready(function () {
        $(".clickingEdit").click(function () { // Click to only happen on announce links
            $("#image").attr("src", $(this).data('imageurl'));
            $("#roomname").val($(this).data('roomname'));
            $("#roomcode").val($(this).data('roomcode'));
            $("#roomid").val($(this).data('roomid'));
            $('#modalEdit').modal('show');
        });
    });
</script>



<script>
    $(document).ready(function () {
        $(".clickingView").click(function () { // Click to only happen on announce links
            $("#roomcode1").val($(this).data('roomcode'));
            $("#roomname1").val($(this).data('roomname'));
            $("#roomid").val($(this).data('roomid'));

            //fetch


            $('#modalView').modal('show');
        });
    });
</script>

<script>
    function exportData() {
        fetch('/Admin/RoomManagement?handler=ExportFile')
            .then(response => {
                if (!response.ok) {
                    throw new Error('Export failed');
                }
                return response.blob();
            })
            .then(blob => {
                var url = window.URL.createObjectURL(blob);
                var a = document.createElement('a');
                a.href = url;
                a.download = 'data.csv';
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
            })
            .catch(error => {
                console.error('Export failed:', error);
                alert('Export failed. Please try again later.');
            });
    }
</script>
